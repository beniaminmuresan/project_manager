<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @task %>

    <h2>Comments</h2>
    <% @task.comments.each do |comment| %>
      <p class="my-5 mt-4">
        <strong>Commenter:</strong>
        <%= comment.full_name %>
      </p>

      <p class="my-5 mt-4">
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
    <% end %>

    <h2>Add a comment:</h2>
    <%= form_with model: [@task.project, @task, Comment.new ] do |form| %>
      <p>
        <%= form.label :full_name %><br>
        <%= form.text_field :full_name%>
      </p>
      <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <%end%>

    <%= link_to 'Edit task', edit_project_task_path(@project, @task), class: "mt-4 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this task', project_task_path(@project, @task), method: :delete, class: "mt-4 rounded-lg py-3 px-5 bg-red-100 font-medium" %>
    </div>
    <%= link_to 'Back to tasks', project_tasks_path(@project), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
