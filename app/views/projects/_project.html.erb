<div id="<%= dom_id project %>">
  <p class="my-5 mt-4">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= project.title %>
  </p>

  <p class="my-5 mt-4">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= project.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "See project", project, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit project', edit_project_path(project), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
